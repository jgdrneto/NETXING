<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.adm.view.AdmRootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Cadastrar">
            <items>
              <MenuItem mnemonicParsing="false" text="Cadastrar Video" />
                  <MenuItem mnemonicParsing="false" text="Cadastrar Categoria" />
                  <MenuItem mnemonicParsing="false" text="Cadastrar Serie" />
                  <MenuItem mnemonicParsing="false" onAction="#cadastrarUsuario" text="Cadastrar Usuario" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Opções">
            <items>
              <MenuItem mnemonicParsing="false" text="Sobre a NETXING" />
                  <MenuItem mnemonicParsing="false" onAction="#logoff" text="Sair" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
